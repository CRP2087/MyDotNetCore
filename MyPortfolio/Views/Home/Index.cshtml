@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5 text-center">
    <h1 class="display-4">Welcome to TradeTrack 📊</h1>
    <p class="lead">Track your stock investments, view real-time prices, and get custom alerts.</p>

    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary btn-lg" asp-controller="Portfolio" asp-action="Index">Go to My Portfolio</a>
    }
    else
    {
        <a class="btn btn-success btn-lg" asp-area="Identity" asp-page="/Account/Register">Get Started – Register</a>
        <p class="mt-2">Already have an account? <a asp-area="Identity" asp-page="/Account/Login">Login here</a>.</p>
    }
</div>
