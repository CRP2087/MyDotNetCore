@model MyPortfolio.Models.Stock
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@{
    ViewData["Title"] = "Add Stock to Portfolio";
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
}

<h2 class="text-center text-primary fw-bold my-4">
    @ViewData["Title"]
</h2>

<form asp-action="Create" method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="Symbol" class="form-label"></label>
        <input asp-for="Symbol" class="form-control" />
        <span asp-validation-for="Symbol" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CompanyName" class="form-label"></label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BuyPrice" class="form-label"></label>
        <input asp-for="BuyPrice" class="form-control" />
        <span asp-validation-for="BuyPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BuyDate" class="form-label"></label>
        <input asp-for="BuyDate" type="date" class="form-control" />
        <span asp-validation-for="BuyDate" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">
            ➕ Add Stock
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            ❌ Cancel
        </a>
    </div>
    <input asp-for="Username" type="hidden" value="@username" />

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
